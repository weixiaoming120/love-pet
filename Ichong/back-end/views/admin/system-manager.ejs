<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <style media="screen">
        .shadow{position: fixed;width: 100%;height: 100%;
         background:  #f9f9f9;opacity: 0.3; filter: alpha(opacity 30);
         left: 0;top: 0;}
        .mod_dialog{width: 450px;height: 240px;border: 1px solid rgb(243, 137, 137);
        background:  #f9f9f9;  position: fixed;left: 46%;top: 45%;
        margin-left: -150px;margin-top: -100px;}
    </style>
    <title>管理首页</title>
    <script src="../../javascripts/adapter.js"></script> <!--rem适配js-->
    <link rel='stylesheet', href='../../stylesheets/normalize.css'>
    <link rel='stylesheet', href='../../stylesheets/header.css'>
    <link rel='stylesheet', href='../../stylesheets/menu.css'>
    <link rel='stylesheet', href='../../stylesheets/menu1.css'>
    <link rel='stylesheet', href='../../stylesheets/base.css'>
    <link rel='stylesheet', href='../../stylesheets/p-system-regular.css'>
    <link rel='stylesheet', href='../../stylesheets/contend.css'>
    <link rel='stylesheet', href='../../stylesheets/base1.css'>
    <link rel='stylesheet', href='../../stylesheets/admin-all.css'>
    <link rel='stylesheet', href='../../stylesheets/formui.css'>
</head>
<body style="background-color:#f9f9f9">
        <!-- p-system-regular -->
        <% include components/top.inc.ejs%>
        <!--menu-->
        <% include components/menu.inc.ejs%>
    <!-- 内容区 -->
        <div class="contend">  
                <h2 style="margin-left:5%; margin-top:1%; font-size:1.5em; color:#cf0000;">系统管理</h2>
                    <!--添加用的 -->
                    <div style="width:90%;height:20%;margin-left:5%;margin-top:1.5%;">
                        <form action="?" method="post">   
                             
                            <table class="tbform">
                                <tr>
                                    <td class="tdl">用户名</td>
                                    <td>
                                        <input id="finishTime"  class="ipt" type="text" name="username" />
                                    </td>
                                    <td class="tdl">真实姓名</td>
                                    <td>
                                        <input id="finishTime"  class="ipt" type="text" name="truename"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="tdl">职位 </td>
                                    <td>
                                        <input id="finishTime"  class="ipt" type="text" name="position"/>
                                    </td>
                                    <td class="tdl">性别 </td>
                                    <td>
                                        <select size="1" name="sex" class="ipt"  >
                                            <option value="男">男</option>
                                            <option value="女">女</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="tdl">电话号码</td>
                                    <td>
                                        <input id="finishTime"  class="ipt" type="number" name="phonenumber"/>
                                    </td>
                                    <td class="tdl">电子邮箱 </td>
                                    <td colspan="3">
                                        <input id="finishTime"  class="ipt" type="text" name="email"/>
                                    </td>
                                </tr>
                            </table>   
                                 <input id="finishTime"   type="submit" value="添加" class="add">                       
                        </form>
                    </div>  
                    <br> <hr style="margin-top:12px;" class="system-regular-panel">                  
            <div class="system-regular-panel">
                    <table  cellspacing="0" cellpadding="3" width="100%">
                        <tr>                           
                            <th>ID</th>
                            <th>用户名</th>
                            <th>真实姓名</th>
                            <th>性别</th>
                            <th>职位</th>
                            <th>手机号码</th>   
                            <th>邮箱</th>
                            <th>操作</th>  
                        </tr>
                        <% for(var i=0;i < system_manager.length;i++){ %>
                        <tr id="row1">
                            <td><%=system_manager[i].id %></td>
                            <td><%=system_manager[i].username %></td>
                            <td><%=system_manager[i].truename %></td>
                            <td><%=system_manager[i].sex %></td>
                            <td><%=system_manager[i].position %></td>
                            <td><%=system_manager[i].phonenumber %></td>
                            <td><%=system_manager[i].email %></td>
                            <td>
                                <a href="?act=mod&id=<%=system_manager[i].id%>"><button class="deledi">修改</button></a>
                                <a href="?act=del&id=<%=system_manager[i].id%>" onclick="return confirm('您确定要删除数据吗？一旦删除数据无法恢复')"><button class="deledi">删除</button></a>
                            </td>    
                        </tr>
                        <% } %>                                         
                    </table>
                </div>      
        </div>       
        <% if(typeof mod_data != 'undefined'){ %>
            <div class="shadow"></div>                    
        <div class="mod_dialog">
            <!-- 修改用的 -->  
            <form action="?" method="post">
                <table style="width:100%;" class="tbform">
                    <input type="hidden" id="finishTime"  class="ipt" name="mod_id" value="<%=mod_data.id %>"  />
                        <tr>
                            <td class="tdl">用户名</td>
                            <td>
                                    <input type="text" id="finishTime"  class="ipt" name="username" value="<%=mod_data.username %>">
                            </td>
                        </tr>
                        <tr>
                            <td class="tdl">真实姓名</td>
                            <td>
                                    <input type="text" id="finishTime"  class="ipt" name="truename" value="<%=mod_data.truename %>">
                            </td>
                        </tr>
                        <tr>
                            <td class="tdl">职位 </td>
                            <td>
                                    <input type="text" id="finishTime"  class="ipt" name="position" value="<%=mod_data.position %>">
                            </td>
                        </tr>
                        <tr>
                            <td class="tdl">性别 </td>
                            <td>
                                <select size="1" name="sex" class="ipt"  >
                                    <option value="男">男</option>
                                    <option value="女">女</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td class="tdl">电话号码</td>
                            <td>
                                    <input type="number" id="finishTime"  class="ipt" name="phonenumber" value="<%=mod_data.phonenumber %>">
                            </td>
                        </tr>
                        <tr>
                            <td class="tdl">电子邮箱 </td>
                            <td colspan="3">
                                    <input type="text" id="finishTime"  class="ipt" name="email" value="<%=mod_data.email %>">
                            </td>
                        </tr>
                    </table>
                   
                            <input id="finishTime"  style="margin-left:65%;"  type="submit" value="修改" class="add">                                      
                            <a href="/admin/system-manager">
                                <input id="finishTime" style="margin-left:80%;"   type="button" value="取消" class="add">
                            </a>
                   
                </form>
        </div>
        <% } %>
          <script src="../../javascripts/menu1.js"></script> <!--控制js-->       
</body>
</html>